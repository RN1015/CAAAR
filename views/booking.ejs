                <title>Plan Your Tour</title>
                <link rel="stylesheet" type="text/css" href="../CSS/booking.css">
            </head>
            <body>
            
                <form method="post" action="/booking">
                    <div class="forsearch">
                        <h1>Select Your Travel Date</h1>
                        <input type="date" name="travel_date" required>
                        
                    </div>
                    <main>
                        <section class="selection-box">
                            <h2>Select a Guide</h2>
                            <select class="input" required name="guide">
                                <option value="disabled selected">Guide</option>
                                <% for(let i=0;i<guide.length;i++){ %>
                                    <option value = "<%= guide[i].guide_name %>"><%= guide[i].guide_name %>(<%= guide[i].language %>)</option>
                                <% } %>
                            </select>
                                </div>
                        </section>
                        <section class="selection-box">
                            <h2>Select a Travel Agency</h2>
                            
                            <select class="input" required name="agency">
                                <option value=" disabled selected">TravelAgency</option>
                                <% for(let i=0;i<agency.length;i++){ %>
                                    <option value = "<%= agency[i].agencyname%>"><%= agency[i].agencyname%>(<%= agency[i].transporttype%>)</option>
                                <% } %>
                            </select>
                                <!-- Add more travel agency options here -->
                            
                        </section>
                        <section class="selection-box">
                            <h2>Select a Hotel</h2>
                            
                            <select class="input" required name="hotel">
                                <option value=" disabled selected">Hotel</option>
                                <% for(let i=0;i<hotel.length;i++){ %>
                                    <option value = "<%= hotel[i].hotelname%>"><%= hotel[i].hotelname%></option>
                                <% } %>
                            </select>
                        </section>
                    </main>
                    <div class="upi">
                            <div class="forpayment">
                                <div class="upipayment">
                                    <label class="payments">
                                        <input type="radio" name="upi" value="upi" required>
                                        UPI method
                                    </label>
                                    <label for="upi" class="upiid"><h3><span>Enter Your UPI Id :</span><input type="text" pattern=".*@.*" required></h3></label>
                                </div>
                                <!-- <div class="upipayment">
                                    <label class="payments">
                                        <input type="radio" name="scan" value="qr">
                                        QR code
                                    </label>
                                    <img src="../images/upi.jpg" alt="qr code" class="qrcode">
                                </div> -->
                            </div>
                            <a href="/dashboard"><input type="submit" class="submit btn" value="paynow"></a>
                            <!-- <input type="submit" class="pay" value="Pay now" class="paynow"> -->
                    </div>

                </form>
                
            
