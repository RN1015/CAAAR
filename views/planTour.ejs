        <!-- featured section -->
        <section id = "featured" class = "py-4" style="background-image: linear-gradient(rgba(38, 42, 50, 0.7), rgba(15, 23, 43, .7)), url(img/.jpg);">
            
            <div class = "container" style="text-align: center;  color: azure; width: 50%;">
                <div class = "header-form" style="margin-top: 20px;">
                    <h2>Choose your Travel location:</h2>
                    <form class = "flex" method="post" action="/plantour" >
                        <input type = "text" class = "form-control" placeholder="Destination name" name="destination">
                        <input type="submit" class = "btn btn4" value = "Search">
                    </form>
                </div>
            </div>
            
            <div class = "container">
                <div class = "title-wrap">
                    <h2 class = "lg-title" style="color: azure">Travel Destinations</h2>
                </div>

                
                <div class = "featured-row">
                    <% for(let i=0;i<places.length;i++) { %>
                    <a href="/tourplaces?place=<%=places[i].name%>"><div class = "featured-item my-2 shadow">
                        <img src = "<%= places[i].image %>" alt = "featured place">
                        
                        <div class = "featured-item-content">
                            <span>
                                <i class = "fas fa-map-marker-alt"></i>
                                <%= places[i].name %>
                            </span>
                            <div>
                                <p class = "text"><%= places[i].desc %></p>
                            </div>
                        </div>
                    </div></a>
                     <% } %>
                </div>
            </div>
        </section>
