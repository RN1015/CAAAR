	<main>
        <header class="flex">
		<div class="container" style="display: inline;">
			<section class="sidebar" style="background-color: transparent; font-size:x-large;">
				<h1>Welcome, <%= name %></h1>
			</section>
			<section class="content">
				<h2>Upcoming Bookings</h2>
                <% for(let i=0;i<data.length;i++) { %>
				<div class="booking">
					<div class="booking-info">
						<p>Place :<%= data[i].booking[0].place_name %></p>
						<p>Date : <%= data[i].booking[0].date %></p>
					</div>
					<div class="booking-action">
						<button class="cbtn">Cancel</button>
					</div>
				</div>
                <% } %>
			</section>              
		</div>
        <div class="profile-form" style="border-width: 2px;">
            <h2>Edit Profile</h2>
            <form method="post" action="/dashboard">
